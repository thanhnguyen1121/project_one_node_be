<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User CRUD page</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container mt-5">
        <p>Edit user</p>
        <form action="/confirm_update_user" method="POST">
            <div hidden>
                <input value="<%=userData.id%>" name="id">
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="inputEmail4">Email</label>
                    <input value="<%=userData.email%>" type="email" class="form-control" id="inputEmail4"
                        placeholder="Email" name="email">
                </div>
            </div>
            <div class="form-group form-row">
                <div class="form-group col-md-6">
                    <label for="lastName">Last name</label>
                    <input value="<%=userData.lastName%>" type="text" class="form-control" id="lastName"
                        name="lastName">
                </div>
                <div class="form-group col-md-6">
                    <label for="firstName">First name</label>
                    <input value="<%=userData.firstName%>" type="text" class="form-control" id="firstName"
                        name="firstName">
                </div>
            </div>
            <div class="form-group">
                <label for="inputAddress">Address</label>
                <input value="<%=userData.address%>" type="text" class="form-control" id="inputAddress"
                    placeholder="1234 Main St" name="address">
            </div>
            <div class="form-group">
                <label for="phoneNumber">Phone number</label>
                <input value="<%=userData.phoneNumber%>" type="text" class="form-control" id="inputAddress2"
                    placeholder="Phone number" name="phoneNumber">
            </div>

            <div class="form-row">
                <div class="form-group col-md-2">
                    <label for="inputState">Role</label>
                    <select value="<%=userData.roleId%>" id="inputState" name="roleId" class="form-control">
                        <option value="1" <%=userData.roleId==1 ? "selected" : "" %>>Admin</option>
                        <option value="2" <%=userData.roleId==2 ? "selected" : "" %>>Doctor</option>
                        <option value="3" <%=userData.roleId==3 ? "selected" : "" %>>Partient</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <label for="inputState">Gender</label>
                    <select value="<%=userData.gender%>" id="inputState" name="gender" class="form-control">
                        <option value="0" <%=userData.gender==0 ? "selected" : "" %>>Mele</option>
                        <option value="1" <%=userData.gender==1 ? "selected" : "" %>>Femele</option>
                    </select>
                </div>

            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>

</body>

</html>