<body>
    <div class="container mt-5">
        <h3>Delete User</h3>
        <form action="/confirm_delete_user" method="POST">
            <div hidden>
                <input value="<%=userData.id%>" name="id">
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="inputEmail4">Bạn có chắc chắn muốn xóa tài khoản với email: <%=userData.email%> </label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Confirm</button>
        </form>
    </div>

</body>

